{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "name",
    "description",
    "expiration_days"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The Name Schema",
      "default": "",
      "examples": [
        "Sustainable"
      ],
      "pattern": "^(.*)$"
    },
    "description": {
      "$id": "#/properties/description",
      "type": "string",
      "title": "The Description Schema",
      "default": "",
      "examples": [
        "For being sustainable you must sustain yourself"
      ],
      "pattern": "^(.*)$"
    },
    "expiration_days": {
      "$id": "#/properties/expiration_days",
      "type": "integer",
      "title": "The Expiration_days Schema",
      "default": 0,
      "examples": [
        365
      ]
    }
  }
}